<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="@dimen/ms_dp"
        android:layout_marginTop="@dimen/mt_dp"
        android:layout_marginEnd="@dimen/me_dp"
        app:cardCornerRadius="@dimen/card_radius">

        <ImageView
            android:id="@+id/image_movie"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_luka" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gallery"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            app:cardCornerRadius="@dimen/card_radius">

            <TextView
                android:id="@+id/date_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/m_dp"
                android:textAlignment="textEnd"
                android:textColor="@color/mine_shaft"
                tools:text="@string/example_date" />

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ms_2_dp"
        android:layout_marginTop="@dimen/mt_cv_dp"
        android:layout_marginEnd="@dimen/me_cv_dp"
        android:gravity="center">

        <TextView
            android:id="@+id/name_movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:minLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/mine_shaft"
            tools:text="@string/example_name_long" />

    </LinearLayout>

    <TextView
        android:id="@+id/desc_movie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ms_cv_dp"
        android:layout_marginTop="@dimen/mt_cv_dp"
        android:layout_marginEnd="@dimen/me_cv_dp"
        android:ellipsize="end"
        android:maxLines="4"
        android:minLines="1"
        android:textColor="@color/tundora"
        android:textSize="16sp"
        tools:text="@string/example_description" />

</LinearLayout>

